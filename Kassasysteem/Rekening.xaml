            </Button.Background>
        </Button>
        <Button x:Name="btnAdd_Copy" Content="" HorizontalAlignment="Left" Margin="9,461,0,0" VerticalAlignment="Top" Width="502" OpacityMask="#00000000" Height="42" Cursor="Hand" Click="BtnAdd_Copy_Click"/>
